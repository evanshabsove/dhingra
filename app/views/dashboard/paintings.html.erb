<h1>paintings dashbaord</h1>

<div class="container">
  <div class="row">
    <div class="col-sm-12 text-center">
      <div class="form-group well" id="all-paintings">
        <%= render :partial => "all_paintings" %>
      </div>
      <div class="form-group well">
        <h1>Create a new painting</h1>
        <table class="table">
          <%= form_for [@gallery, @painting], url: gallery_paintings_url(@gallery.id) do |f| %>
          <tr>
            <th>
              <%= f.label :title %>
              <%= f.text_field :title, :class => "form-control" %>
            </th>
            <th>
              <%= f.label :image %>
              <%= f.file_field :image, :class => "form-control" %>
            </th>
            <th>
              <%= f.label :description %>
              <%= f.text_area :description, :class => "form-control" %>
            </th>
            <th id="<%= @gallery.id %>">
              <%= f.submit "Submit", :class=>"btn btn-primary", :id => "create_painting_button" %>
            </th>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
