<h1>paintings dashbaord</h1>

<div class="container">
  <div class="row">
    <div class="col-sm-12 text-center">
      <div class="form-group well">
        <h1>Manage current paintings</h1>
        <table class="table">
          <% @paintings.each do |painting| %>
          <tr>
            <%= form_for painting, method: 'patch', url: "/galleries/#{@gallery.id}/#{painting.id}" do |f| %>
            <th>
              <%= f.text_field :title, :class => "form-control", value: "#{painting.title}" %>
            </th>
            <th>
              <%= f.text_area :description, :class => "form-control", value: "#{painting.description}" %>
            </th>
            <th>
              <%= painting.image %>
            </th>
            <th>
              <%= f.file_field :image, :class => "form-control" %>
            </th>
            <th>
              <%= f.submit "Submit", :class=>"btn btn-primary" %>
            </th>
            <% end %>
          </tr>
          <% end %>
        </table><br>
      </div>
      <div class="form-group well">
        <h1>Create a new painting</h1>
        <table class="table">
          <%= form_for [@gallery, @painting] do |f| %>
          <tr>
            <th>
              <%= f.label :title %>
              <%= f.text_field :title, :class => "form-control" %>
            </th>
            <th>
              <%= f.label :image %>
              <%= f.file_field :image, :class => "form-control" %>
            </th>
            <th>
              <%= f.label :description %>
              <%= f.text_area :description, :class => "form-control" %>
            </th>
            <th>
              <%= f.submit "Submit", :class=>"btn btn-primary" %>
            </th>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
