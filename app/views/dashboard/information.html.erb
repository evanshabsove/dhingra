<div class="edit-information-container">
  <h1>Contact Me</h1>
  <legend></legend>
  <%= form_for @contact, url: entry_url(@contact.id) do |f| %>
    <div class="form-group">
      <%= f.text_area :description, placeholder: "Description", class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: "btn btn-primary" %>
    </div>
  <% end %>
  <h1>About</h1>
  <legend></legend>
  <%= form_for @about, url: entry_url(@about.id) do |f| %>
    <div class="form-group">
      <%= f.text_area :description, placeholder: "Description", class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
