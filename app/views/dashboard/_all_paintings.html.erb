<h1>Manage current paintings</h1>
<table class="table">
  <% @paintings.each do |painting| %>
  <tr>
    <%= form_for painting, method: 'patch', url: "/galleries/#{@gallery.id}/#{painting.id}" do |f| %>
    <th>
      <%= f.text_field :title, :class => "form-control", value: "#{painting.title}" %>
    </th>
    <th>
      <%= f.text_area :description, :class => "form-control", value: "#{painting.description}" %>
    </th>
    <th>
      <!-- commenting this out for now b/c too lazy to make css sho image shows up okay -->
      <%# image_tag(painting.image_url, :class => "img-responsive") if painting.image? %>
      <%= painting.image %>
    </th>
    <th>
      <%= f.file_field :image, :class => "form-control" %>
    </th>
    <th>
      <%= f.submit "Submit", :class=>"btn btn-primary" %>
      <%= link_to "Delete Painting", gallery_painting_path(painting), method: :delete, data: {confirm: 'Are you sure?'} %>
    </th>
    <% end %>
  </tr>
  <% end %>
</table><br>
