<h1>edit dashboard</h1>

<div class="container">
  <div class="row">
    <div class="col-sm-12 text-center">
      <div class="form-group well">
        <table class="table">
          <tr>
            <th>
              Gallery Name
            </th>
            <th>
              Gallery descrption
            </th>
          </tr>
          <% @gallerys.each do |gallery| %>
          <tr>
            <%= form_for gallery, method: 'patch', url: "/galleries/#{gallery.id}" do |f| %>
            <th>
              <%= f.text_field :title, :class => "form-control", value: "#{gallery.title}" %>
            </th>
            <th>
              <%= f.text_area :description, :class => "form-control", value: "#{gallery.description}" %>
            </th>
            <th>
              <%= f.submit "Submit", :class=>"btn btn-primary" %>
            </th>
            <% end %>
            <th>
              <a href="#" class="btn btn-primary">View paintings</a>
            </th>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
