<!DOCTYPE html>
<html>
  <head>
    <title>Dhingra</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Lato|Lato:300|Lato:100" rel="stylesheet">

    <link href='https://fonts.googleapis.com/css?family=Great+Vibes' rel='stylesheet' type='text/css'>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.css"/>
    <link rel="stylesheet" type="text/css" href="https://kenwheeler.github.io/slick/slick/slick-theme.css"/>
    <script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.min.js"></script>
  </head>

  <body>

  <% unless css_slug == "home-index" %>
    <style media="screen">
      .header-section {
        background: url('6.JPG') no-repeat center center fixed;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
      }
    </style>
  <% end %>

  <div class="header-section container-fluid <%= css_slug %>">
    <div class="row">
      <div id="main-title" class="col-sm-12 text-center">
        <h1>ALAN DHINGRA</h1>
      </div>
      <% if current_user %>
        <h1 class="cart-text"><%= render 'layouts/cart_text' %></h1>
      <% end %>
    </div>
    <nav class="navbar navbar-default transparent">
      <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>

        <div class="collapse navbar-collapse" id="navbar">
          <ul class="nav navbar-nav">
            <li id="home"><%= link_to 'Home', root_path %></li>
            <li id="entries"><%= link_to 'Galleries', galleries_path %></li>
            <li id="about"><%= link_to 'About', about_path %></li>
            <li id="event"><%= link_to 'Events', events_homepage_path %></li>
            <li id="contact"><%= link_to 'Contact', new_contact_path %></li>
            <% if current_user && current_user.admin %>
              <li id="dashboard"><%= link_to 'Dashboard', dashboard_index_url %></li>
            <% end %>
            <% if current_user %>
              <li id="products"><%= link_to 'Products', provinces_path %></li>
            <% end %>

            <!-- <li id="blog"><%= link_to 'Blog', blog_path %></li> -->
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
  </div>
    <%= yield %>
    <footer class="footer text-center">
      <div class="container-fluid">
        <div class="row">
          <div class="col-sm-12 footer-text">
            <h1>ALAN DHINGRA</h1>
            <div class="call">
              <span class="glyphicon glyphicon-earphone" aria-hidden="true"> Call at 519-284-4792</span>
            </div>
            <div class="location">
              <span class="glyphicon glyphicon-map-marker" aria-hidden="true"> 234 Queen St. E. St Marys, On.</span>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
