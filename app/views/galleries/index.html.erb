<div class="container-fluid gallery-index-container">
  <% @galleries.in_groups_of(3, false) do |group| %>
    <div class="row">
      <% group.each do |gallery| %>
        <div class="col-md-4">
          <%= image_tag(gallery.paintings.first.image_url, :class => "img-responsive") %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
