<div class="container gallery-index-container">
  <% @galleries.in_groups_of(3, false) do |group| %>
    <div class="row">
      <% group.each do |gallery| %>
        <div class="col-sm-4">
          <%= image_tag(gallery.paintings.first.image_url, :class => "img-responsive image-gallery") %>
          <div class="hover-content">
            <span class="hover-title"><%= gallery.title %></span><br><br>
            <span class="hover-description"><%= gallery.description %></span>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
