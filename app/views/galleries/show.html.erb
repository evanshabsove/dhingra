<section class="center slider">
  <% count = 0 %>
  <% @gallery.paintings.each do |painting| %>
  <div class="<%= count %>">
    <%= image_tag(painting.image_url, class:"gallery-painting") if painting.image? %>
  </div>
  <% count +=1 %>
  <% end %>
</section>
<section class="slider-text">
  <div class="container">
    <div class="row">
      <% count = 0 %>
      <% @gallery.paintings.each do |painting| %>
      <div class="col-sm-12" id="<%= count %>">
        <h1><%= painting.title %></h1>
        <p>
          <%= painting.description %>
        </p>
      </div>
      <% count +=1 %>
      <% end %>
    </div>
  </div>
</section>

<div class="gallery-paintings-container">
  <% @gallery.paintings.each do |painting| %>
  <%= link_to gallery_painting_url(@gallery.id, painting.id), class:"painting-link" do %>
  <div class="gallery-painting-div">
    <%= image_tag(painting.image_url, class:"gallery-painting") if painting.image? %>
    <div class="painting-title-div">
      <h1 class="painting-title"><%= painting.title %></h1>
    </div>
  </div>
  <% end %>
  <% end %>

</div>
