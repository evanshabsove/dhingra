<section class="center slider">
  <% @gallery.paintings.each_with_index do |painting, index| %>
  <div class="<%= index %> painting-image" value="<%= index %>">
    <%= image_tag(painting.image_url, class:"gallery-painting", 'data-target': "##{painting.id}", 'data-toggle': "modal") if painting.image? %>
  </div>
  <% end %>
</section>
<% @gallery.paintings.each_with_index do |painting, index| %>
  <div id="<%= painting.id %>" class="modal fade" role="dialog">
    <div class="modal-dialog"> -->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title"><%= painting.title %></h4>
        </div>
        <div class="modal-body">
          <div class="modal-body-image">
            <%= image_tag(painting.image_url, class:"modal-image") if painting.image? %>

          </div>
          <div class="modal-body-description">
            <p><%= painting.description %></p>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>

    </div>
  </div>
<% end %>

